<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net6.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<RepositoryUrl>https://github.com/RusysDev/SQLite</RepositoryUrl>
		<PackageProjectUrl>https://github.com/RusysDev/SQLite</PackageProjectUrl>
		<AssemblyName>RusysDev.SQLite</AssemblyName>
		<RootNamespace>RusysDev.SQLite</RootNamespace>
		<Title>SQLite</Title>
		<AssemblyVersion>1.0.0-beta</AssemblyVersion>
		<FileVersion>$(AssemblyVersion)</FileVersion>
		<Version>$(AssemblyVersion)</Version>
		<EmbedAllSources>true</EmbedAllSources>
		
		<Authors>RusysDev</Authors>
		<Company>Rusys</Company>
		<PackageDescription>SDK for SQLite database</PackageDescription>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'!='Release|AnyCPU'">
		<VersionSuffix>test</VersionSuffix>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
		<GenerateDependencyFile>false</GenerateDependencyFile>
		<CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
		<VersionSuffix></VersionSuffix>
	</PropertyGroup>

	<ItemGroup>
	  <None Update="SqlUpdate.xml">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </None>
	</ItemGroup>

</Project>
