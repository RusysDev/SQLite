<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net6.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		
		<RepositoryUrl>https://github.com/RusysDev/SQLite</RepositoryUrl>
		<PackageProjectUrl>https://github.com/RusysDev/SQLite</PackageProjectUrl>
		
		<Title>SQLite</Title>
		<AssemblyName>RusysDev.SQLite</AssemblyName>
		<RootNamespace>RusysDev.SQLite</RootNamespace>

		<AssemblyVersion>$(VersionPrefix)</AssemblyVersion>
		<FileVersion>$(AssemblyVersion)</FileVersion>
		<Version>$(AssemblyVersion)</Version>

		<VersionPrefix>1.0.0</VersionPrefix>
		<VersionSuffix>alpha</VersionSuffix>

		<Authors>RusysDev</Authors>
		<Company>Rusys</Company>
		<PackageDescription>SDK for SQLite database</PackageDescription>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		
		<EmbedAllSources>true</EmbedAllSources>
	</PropertyGroup>

	<ItemGroup>
		<None Include="README.md" Pack="true" PackagePath="\"/>
	</ItemGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
		<GenerateDependencyFile>false</GenerateDependencyFile>
		<CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Data.Sqlite" Version="7.0.1" />
	</ItemGroup>

</Project>
